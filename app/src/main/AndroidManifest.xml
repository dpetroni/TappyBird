<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.elon.cs.tappybird1" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/squad"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        <activity
            android:name=".SkyActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".StartScreenActivity"
            android:label="@string/title_activity_start_screen"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EndScreenActivity"
            android:label="@string/title_activity_end_screen" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.VIBRATE"/>

</manifest>
